<UserControl x:Class="NIKTOPIA.Views.HowtoPlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NIKTOPIA.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Command="{Binding GoBackCommand}" Content="Go Back" Width="200" Height="30" Background="Black" FontFamily="Times New Roman" Foreground="White"  FontSize="20"  BorderBrush="Yellow" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/howtoplay.jpg"/>
        </Grid.Background>
    </Grid>
</UserControl>
